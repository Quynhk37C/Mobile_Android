<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="35dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ADD8E6"
        android:textColor="#ffffff"
        android:text="QUẢN LÝ NHÂN VIÊN" />


    <Button
        android:text="Hệ thống"
        android:id="@+id/btnhethong"
        android:layout_weight="0.11"
        android:background="#6A5ACD"
        android:textColor="#ffffff"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_toRightOf="@+id/btnphongban"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/btnlienhe" />

    <Button
        android:text="Nhân viên"
        android:id="@+id/btnnhanvien"
        android:layout_weight="0.11"
        android:background="#CD5C5C"
        android:textColor="#ffffff"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/textView3"/>

    <Button
        android:text="Phòng ban"
        android:id="@+id/btnphongban"
        android:layout_weight="0.11"
        android:background="#3CB371"
        android:textColor="#ffffff"
        android:layout_height="120dp"
        android:layout_width="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/btnnhanvien"/>

    <Button
        android:text="Liên hệ"
        android:id="@+id/btnlienhe"
        android:layout_weight="0.11"
        android:background="#FF4500"
        android:textColor="#ffffff"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/btnnhanvien"
        android:layout_width="120dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textView3"
         />

</RelativeLayout>