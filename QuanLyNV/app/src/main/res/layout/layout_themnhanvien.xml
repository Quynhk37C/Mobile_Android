<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Nhập tên nhân viên"
        android:background="@drawable/border"
        android:layout_marginTop="15dp"
        android:id="@+id/editTenNv"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/rdGioiTinh"
        android:layout_width="wrap_content"
        android:layout_below="@+id/editTenNv"
        android:layout_alignLeft="@+id/editTenNv"
        android:layout_alignRight="@+id/editTenNv"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rdNam"
            android:layout_width="wrap_content"
            android:text="Nam"
            android:checked="true"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rdNu"
            android:text="Nữ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>



    <Spinner
        android:layout_width="210dp"
        android:layout_marginLeft="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/spinnerPhongBan"
        android:layout_below="@+id/rdGioiTinh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:inputType="textPersonName"
        android:hint="Nhập vào địa chỉ"
        android:ems="10"
        android:id="@+id/editDiaChi"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinnerPhongBan"
        android:layout_alignLeft="@+id/rdGioiTinh"
        android:layout_alignStart="@+id/rdGioiTinh" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="Nhập email"
        android:id="@+id/editEmail"
        android:layout_below="@+id/editNgaySinh"
        android:layout_alignLeft="@+id/editNgaySinh"
        android:layout_alignStart="@+id/editNgaySinh" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="Nhập số điện thoại"
        android:id="@+id/editSoDT"
        android:layout_below="@+id/editDiaChi"
        android:layout_alignLeft="@+id/editDiaChi"
        android:layout_alignStart="@+id/editDiaChi" />
    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:hint="Nhập lương"
        android:layout_below="@+id/editEmail"
        android:layout_alignLeft="@+id/editEmail"
        android:layout_alignStart="@+id/editEmail"
        android:id="@+id/editLuong" />
    <Button
        android:text="Thêm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:id="@+id/btnThem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="67dp" />
    <Button
        android:text="Thoát"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnThem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:id="@+id/btnThoat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nhập ngày sinh"
        android:background="@drawable/border"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/editNgaySinh"
        android:layout_below="@+id/editSoDT"
        android:layout_alignLeft="@+id/editSoDT"
        android:layout_alignStart="@+id/editSoDT" />


</RelativeLayout>