<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:padding="10dp"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="3"
        android:id="@+id/imageView"
        android:background="@drawable/pb"
        android:layout_row="0"
        android:layout_column="0" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên phòng ban"
        android:layout_columnWeight="1"
        android:id="@+id/ViewListPhongBan"
        android:textSize="20dp"
        android:layout_row="0"
        android:paddingLeft="15dp"
        android:layout_column="1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã phòng ban"
        android:layout_columnWeight="1"
        android:id="@+id/viewlistMaPhongBan"
        android:layout_row="1"
        android:paddingLeft="15dp"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số nhân viên"
        android:paddingLeft="15dp"
        android:layout_columnWeight="1"
        android:id="@+id/viewlistSoNhanVien"
        android:layout_row="2"
        android:layout_marginBottom="15dp"
        android:layout_column="1" />
</GridLayout>